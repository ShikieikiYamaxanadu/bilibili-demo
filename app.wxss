@import "styles/font-awesome.wxss";

page,view,image,swiper,swiper-item,navigator,video{
  box-sizing:border-box;
  
}


/*视频列表*/
.video_wrap{
  display:flex;
  flex-wrap:wrap;
  padding:5rpx;
  justify-content:space-between;
}

.video_item{
  width:48%;
  margin-bottom:20rpx;
}

.video_img{}
.video_img image{
  width:100%;
  border-radius:15rpx;
}
.video_img .video_info{
  position:absolute;
  bottom:10rpx;
  left:0;
  width:100%;
  display:flex;
  justify-content:space-around;
  color:#fff;
  font-size:24rpx;
}

.video_title{
  font-size: 28rpx;
  display:-webkit-box;
  overflow:hidden;
  white-space:normal;
  text-overflow:ellipsis;
  word-wrap:break-word;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
